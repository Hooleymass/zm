<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
    x:Class="Hymnal.XF.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com">
    <Application.Resources>

        <!--  Application resource dictionary  -->
        <ResourceDictionary>

            <x:String x:Key="BackgroundImageFile">Background</x:String>

            <Style x:Key="TabbedPageStyle" TargetType="mvxViews:MvxTabbedPage">
                <Setter Property="UnselectedTabColor" Value="{DynamicResource UnselectedTabColor}" />
                <Setter Property="SelectedTabColor" Value="{DynamicResource SelectedTabColor}" />
                <Setter Property="BarTextColor" Value="{DynamicResource SelectedTabColor}" />
                <Setter Property="BarBackgroundColor" Value="{DynamicResource PrimaryBackgroudColor}" />
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</prism:PrismApplication>
