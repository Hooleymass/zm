<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage
    x:Class="Hymnal.XF.Views.RootPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    xmlns:i18n="clr-namespace:Hymnal.XF.Extensions.i18n"
    xmlns:prism="http://prismlibrary.com"
    xmlns:viewModels="clr-namespace:Hymnal.XF.ViewModels"
    xmlns:views="clr-namespace:Hymnal.XF.Views"
    Title="{i18n:Translate AdventistHymnal}"
    android:TabbedPage.ToolbarPlacement="Bottom"
    prism:ViewModelLocator.AutowireViewModel="True"
    x:DataType="viewModels:RootViewModel"
    BarBackgroundColor="{DynamicResource BackgroundTabColor}"
    BarTextColor="{DynamicResource SelectedTabColor}"
    SelectedTabColor="{DynamicResource SelectedTabColor}"
    Style="{DynamicResource TabbedPageStyle}"
    UnselectedTabColor="{DynamicResource UnselectedTabColor}"
    Visual="Material" />